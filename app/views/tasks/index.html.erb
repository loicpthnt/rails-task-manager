<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed == true %>
      <li>✅<%= link_to task.title, task_path(task.id) %>     <%= link_to "🚮 ?",
                                                                      task_path(task.id),
                                                                      method: :delete,
                                                                      data: { confirm: "Are you sure?" } %></li></li>
    <% else %>
      <li>⭕️<%= link_to task.title, task_path(task.id) %>     <%= link_to "🚮 ?",
                                                                      task_path(task.id),
                                                                      method: :delete,
                                                                      data: { confirm: "Are you sure?" } %></li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>
